numero_entero=float(input("Ingrese numero entero: "))
if numero_entero%2==0:
    print("El numero es par")
elif numero_entero%2!=0:
    print("El numero es impar")
else:
    print("El numero no es un numero entero")

#otra forma
numero_entero=int(input("Ingrese numero entero: "))
if numero_entero%2==0:
    print("El numero es par")
else:
    print("El numero es impar")